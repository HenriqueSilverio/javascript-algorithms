{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["standard"],
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "rules": {
    "newline-per-chained-call": ["error", { "ignoreChainWithDepth": 2 }],
    "object-curly-spacing": ["error", "always"],
    "quotes": ["error", "single", { "avoidEscape": true }]
  }
}
